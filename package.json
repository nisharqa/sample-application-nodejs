{
  "name": "sample-application-nodejs",
  "version": "1.0.0",
  "description": "Sample Node.js application for CodeRabbit PoC evaluation with intentional security issues",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "node app.js",
    "test": "node test-api.js",
    "test:endpoints": "node test-api.js",
    "docker:build": "docker build -t vulnerable-nodejs-app:latest .",
    "docker:run": "docker run -p 3000:3000 vulnerable-nodejs-app:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f app"
  },
  "keywords": [
    "nodejs",
    "code-review",
    "security-issues",
    "coderabbit"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "4.17.1",
    "body-parser": "1.19.0",
    "mongoose": "5.11.15",
    "dotenv": "8.2.0",
    "lodash": "4.17.20"
  },
  "devDependencies": {}
}
